/* 标签页样式 */
.van-tabs .van-ellipsis{
    /* 关闭溢出隐藏 */
    overflow: visible;
    /* 宽度自动, 由内容决定  (占据的主轴的空间大小) */
    flex-basis: auto!important;
    /* 设置左右间距 */
    padding: 0 6px;
}


/* 轮播图样式 */
.banner{
    padding: 10rpx 20rpx 0;
    box-sizing: border-box;
}
swiper{
    height: 384rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
swiper image{
    width: 100%;
    display: block;
}


/* 页面的主体 */
.main{
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;

    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
}

/* 中卡片的样式 */
.uiMiddleCard{
    width: 48%;
    background-color: white;
    border-radius: 10rpx;
    overflow: hidden;
    margin-top: 20rpx;
}
.uiMiddleCard image{
    width: 100%;
    height: 190rpx;
    display: block;
}
.uiMiddleCard .bottom{
    height: 164rpx;
    padding: 14rpx;
    box-sizing: border-box;
    font-size: 30rpx;
}
.uiMiddleCard .bottom .title{
    height: 84rpx;
}
.uiMiddleCard .author{
    margin-top: 24rpx;
    font-size: 26rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
}



/* uiMiddleCard 样式 */
.uiMiddleCard .top{
    position: relative;
}
.uiMiddleCard .count{
    width: 100%;
    height: 50rpx;
    padding: 0 10rpx;
    box-sizing: border-box;

    position: absolute;
    left: 0;
    bottom: 0;
    font-size: 24rpx;
    color: white;
    text-shadow: 1px 1px 2px #333;

    display: flex;
    justify-content: space-between;
    align-items: center;
}
.uiMiddleCard .count .first{
    margin-right: -60rpx;
}

/* bigCardTop 样式 */
.uiBigCardTop{
    width: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    background-color: white;
    margin-top: 20rpx;
    border-radius: 10rpx;
}
.uiBigCardTop image{
    width: 100%;
    height: 440rpx;
}
.uiBigCardTop .content{
    padding: 20rpx;
    box-sizing: border-box;
}
.uiBigCardTop .title{
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.uiBigCardTop .title>view{
    width: 90rpx;
    display: flex;
    justify-content: space-between;
    font-size: 34rpx;
}

/* 用户头像 */
.uiBigCardTop .avatar,
.uiBigCard .avatar{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
}

.uiBigCardTop .avatar image,
.uiBigCard .avatar image{
    width: 100%;
    height: 100%;
}

.uiBigCardTop .author,
.uiBigCard .author{
    height: 50rpx;
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.uiBigCardTop .author .user,
.uiBigCard .author .user{
    display: flex;
    align-items: center;
    color: #333;
}

.uiBigCardTop .follow{
    color: red;
}



/* bigCard 样式 */
.uiBigCard{
    width: 100%;
    background-color: white;
    border-radius: 10rpx;
    overflow: hidden;
    margin-top: 20rpx;
}
.uiBigCard .author{
    height: 100rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.uiBigCard .title{
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.uiBigCard .last{
    padding: 10rpx 40rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #999;
}
.uiBigCard .ellipsis{
    font-size: 32rpx;
}